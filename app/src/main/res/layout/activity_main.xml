<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unalfaruk.catchthekenny.MainActivity">

    <GridLayout
        android:layout_width="369dp"
        android:layout_height="403dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSayac"
        app:layout_constraintHorizontal_bias="0.0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="puanArtir"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:onClick="puanArtir"
            android:id="@+id/imageView2"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_row="0"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:onClick="puanArtir"
            android:id="@+id/imageView3"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="2"
            android:layout_row="0"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:onClick="puanArtir"
            android:id="@+id/imageView4"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="0"
            android:layout_row="1"
            app:srcCompat="@drawable/mole" />

        <Button
            android:id="@+id/btnYeniden"
            android:layout_width="121dp"
            android:layout_height="120dp"
            android:onClick="yenidenBaslat"
            android:text="Yeniden"
            android:visibility="invisible" />

        <ImageView
            android:onClick="puanArtir"
            android:id="@+id/imageView5"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_row="1"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:onClick="puanArtir"
            android:id="@+id/imageView6"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="2"
            android:layout_row="1"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:onClick="puanArtir"
            android:id="@+id/imageView7"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="0"
            android:layout_row="2"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:onClick="puanArtir"
            android:id="@+id/imageView8"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="1"
            android:layout_row="2"
            app:srcCompat="@drawable/mole" />

        <ImageView
            android:onClick="puanArtir"
            android:id="@+id/imageView9"
            android:layout_width="122dp"
            android:layout_height="130dp"
            android:layout_column="2"
            android:layout_row="2"
            app:srcCompat="@drawable/mole" />

    </GridLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <TextView
        android:id="@+id/txtSayac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Zaman: 30"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Puan: 0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
